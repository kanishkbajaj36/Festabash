<?xml version="1.0" encoding="utf-8"?>
<layer-list  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Background color, adjust as needed -->
            <stroke
                android:width="1dp"
                android:color="#CCCCCC" /> <!-- Border color, adjust as needed -->
        </shape>
    </item>

    <!-- Contents of the grid item -->
    <item android:left="1dp" android:right="1dp" android:top="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Background color, adjust as needed -->
        </shape>
    </item>
</layer-list >