<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/shape"
        android:paddingBottom="20dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:gravity="center"
        android:textStyle="bold"
        android:background="@drawable/leftrightradious"
        android:text="Add Guest"/>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/baseline_clear_24"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:id="@+id/clearCross"
                app:tint="@color/white" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/add_guest_background">



    <EditText
        android:id="@+id/AddGuestNameEdit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:elevation=".5dp"
        android:hint="Guest Name"
        android:background="@null"
        android:paddingLeft="10dp"
        android:textSize="15dp"
        android:textStyle="bold" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/add_guest_background"
            android:weightSum="10"
            android:elevation=".5dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="1dp"
            android:orientation="horizontal">
            <com.hbb20.CountryCodePicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/AddPhoneNoEdit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="0123456789"
                android:paddingLeft="3dp"
                android:inputType="number"
                android:background="@null"/>

        </LinearLayout>

        <TextView
            android:id="@+id/saveBtnTxt"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:text="Save"
            android:gravity="center"
            android:layout_marginTop="40dp"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:background="@drawable/btngradient"
            android:textStyle="bold"/>
    </LinearLayout>





</RelativeLayout>