<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/eventlinearbg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/seelesslinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:visibility="visible">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileimg"
                android:layout_width="60dp"
                android:layout_height="65dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/second_border"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:src="@drawable/partypic"
                app:civ_border_color="@color/white"
                app:civ_border_width="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:id="@+id/EventNameElist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="9"
                        android:text="@string/event_name_here"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/DateElist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/TimeElist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:gravity="right"
                        android:paddingRight="10dp"
                        android:textSize="10sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/baseline_location_on_24"
                        app:tint="@color/grey" />

                    <TextView
                        android:id="@+id/EventLocElist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/berlin_germany"
                        android:textColor="@color/grey"
                        android:textSize="12sp" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/feed1"
                            android:layout_width="30dp"
                            android:layout_height="18dp"
                            android:src="@drawable/feed_home" />

                        <ImageView
                            android:id="@+id/chatFirst"
                            android:layout_width="30dp"
                            android:layout_height="18dp"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/chats_home" />

                        <ImageView
                            android:id="@+id/photoFirst"
                            android:layout_width="30dp"
                            android:layout_height="18dp"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/photo" />

                        <ImageView
                            android:id="@+id/guestListBtn"
                            android:layout_width="30dp"
                            android:layout_height="18dp"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/people"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/editBtn"
                            android:layout_width="30dp"
                            android:layout_height="18dp"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/settings2"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/InvitationFirst"
                            android:layout_width="30dp"
                            android:layout_height="18dp"
                            android:layout_marginLeft="10dp"
                            android:visibility="gone"
                            android:src="@drawable/wedding_invitation" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/seemoreicon"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/down_arrow" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/seemorelinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:visibility="gone">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileimg1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/second_border"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:src="@drawable/partypic"
                app:civ_border_color="@color/white"
                app:civ_border_width="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/EventNameMorelist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Event Name"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgloc"
                        android:layout_width="12sp"
                        android:layout_height="12sp"
                        android:src="@drawable/baseline_location_on_24"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/grey" />

                    <TextView
                        android:id="@+id/EventLocMorelist"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey"
                        android:textSize="10sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/DateMorelist"
                        app:layout_constraintStart_toEndOf="@+id/imgloc"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/DateMorelist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/TimeMorelist"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/TimeMorelist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:paddingRight="10dp"
                        android:textSize="10sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/EventDescMorelist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="4dp"
                    android:text="@string/event_name"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:id="@+id/seelessic1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/feed"
                            android:layout_width="30dp"
                            android:layout_height="20dp"
                            android:src="@drawable/feed_home" />

                        <ImageView
                            android:id="@+id/chatSecond"
                            android:layout_width="30dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/chats_home" />

                        <ImageView
                            android:id="@+id/photoSecond"
                            android:layout_width="30dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/photo" />

                        <ImageView
                            android:id="@+id/guestuser"
                            android:layout_width="30dp"
                            android:layout_height="20dp"
                            android:visibility="gone"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/people" />

                        <ImageView
                            android:id="@+id/clickView"
                            android:layout_width="30dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:visibility="gone"
                            android:src="@drawable/settings2" />

                        <ImageView
                            android:id="@+id/InvitationSee"
                            android:layout_width="30dp"
                            android:layout_height="18dp"
                            android:layout_marginLeft="10dp"
                            android:visibility="gone"
                            android:src="@drawable/wedding_invitation" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/seelessicon"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/baseline_keyboard_arrow_up_24" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>